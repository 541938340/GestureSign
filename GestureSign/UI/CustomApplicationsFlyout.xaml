<controls:Flyout x:Class="GestureSign.UI.CustomApplicationsFlyout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" 
        xmlns:local="clr-namespace:GestureSign.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="280" Header="自定义规则" Position="Right" Width="280" ClosingFinished="Flyout_ClosingFinished">
    <controls:Flyout.Resources>
        <local:Bool2VisibilityConverter x:Key="Bool2VisibilityConverter"></local:Bool2VisibilityConverter>
    </controls:Flyout.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="210"/>
            <RowDefinition Height="34"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button x:Name="ShowRunningButton" Content="选择运行中的窗口.." HorizontalAlignment="Left" VerticalAlignment="Bottom"  Click="ShowRunningButton_Click" Margin="10,0,0,10" Grid.Row="3" FontSize="12" FontWeight="Bold" Height="25" Width="123"/>
        <Button x:Name="btnAddCustom" Content="确定" Style="{DynamicResource SquareButtonStyle}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="80" Click="btnAddCustom_Click" Margin="0,0,10,7" Grid.Row="3" FontSize="12" FontFamily="Microsoft YaHei UI" Height="27"/>
        <!--<Button Content="取消" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" />-->
        <StackPanel Margin="0">
            <TextBlock x:Name="ApplicationNameTextBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="程序名称" VerticalAlignment="Top" Foreground="{StaticResource AccentColorBrush}" FontSize="16" Margin="10,0,0,0"/>
            <TextBlock x:Name="GroupNameTextBlock" HorizontalAlignment="Right" TextWrapping="Wrap" Text="分组名" VerticalAlignment="Top" Foreground="{StaticResource AccentColorBrush}" FontSize="16" Margin="10,-20,70,0"/>
            <TextBox x:Name="ApplicationNameTextBox"  HorizontalAlignment="Left" Height="26" Margin="10,5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="137"/>
            <TextBox x:Name="GroupNameTextBox" HorizontalAlignment="Right" Height="26" Margin="0,-26,5,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="113" />

            <RadioButton x:Name="RadioButton1"   GroupName="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,20,0,0" IsChecked="True" Height="21" Width="120" >
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="可执行文件名" VerticalAlignment="Top" Foreground="{StaticResource AccentColorBrush}" FontSize="16"/>
            </RadioButton>
            <TextBox x:Name="txtFile" Visibility="{Binding IsChecked, Converter={StaticResource Bool2VisibilityConverter}, ElementName=RadioButton1}" HorizontalAlignment="Left" Height="26" Margin="10,5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="189" IsEnabled="{Binding IsChecked, ElementName=RadioButton1}"/>
            <Button x:Name="btnBrowse" Content="浏览.." Visibility="{Binding IsChecked, Converter={StaticResource Bool2VisibilityConverter}, ElementName=RadioButton1}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-26,5,0" Click="btnBrowse_Click" FontSize="12" FontWeight="Bold" Height="26" Width="51"/>
            <RadioButton x:Name="RadioButton2"
                         GroupName="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Height="21" Width="72" >
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="窗口类" VerticalAlignment="Top" Foreground="{StaticResource AccentColorBrush}" FontSize="16"/>
            </RadioButton>
            <TextBox x:Name="txtClass" Visibility="{Binding ElementName=RadioButton2,Path=IsChecked,Converter={StaticResource Bool2VisibilityConverter}}" Height="26" Margin="10,5,5,0" TextWrapping="Wrap" VerticalAlignment="Top" IsEnabled="{Binding ElementName=RadioButton2,Path=IsChecked}" Grid.ColumnSpan="2"/>
            <RadioButton x:Name="RadioButton3"
                         GroupName="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Width="88" Height="21" >
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="窗口标题" VerticalAlignment="Top" Foreground="{StaticResource AccentColorBrush}" FontSize="16"/>
            </RadioButton>
            <TextBox x:Name="txtTitle" Visibility="{Binding ElementName=RadioButton3,Path=IsChecked,Converter={StaticResource Bool2VisibilityConverter}}" Height="26" Margin="10,5,5,0" TextWrapping="Wrap" VerticalAlignment="Top" IsEnabled="{Binding ElementName=RadioButton3,Path=IsChecked}" Grid.ColumnSpan="2"/>
        </StackPanel>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="定位窗口" VerticalAlignment="Top" Margin="10,10,0,0" Foreground="{StaticResource AccentColorBrush}" FontSize="16" Height="20" Grid.Row="2" Width="64" />
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="将右侧图标拖至你想忽略的程序窗口上以选择窗口，然后释放鼠标按键" VerticalAlignment="Top" Margin="10,35,0,0" Width="189" Height="46" Grid.Row="2"/>
        <CheckBox x:Name="chkCrosshairHide" Content="拖拽图标时隐藏本窗口" HorizontalAlignment="Left" Margin="10,1,0,0" VerticalAlignment="Top" Height="0" Grid.Row="3" Width="144"/>
        <local:Crosshair x:Name="crosshairMain" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" Height="50" Grid.Row="2" Width="50"/>
        <CheckBox x:Name="chkPattern" Content="使用正则表达式" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="18" Width="108" Grid.Row="1"/>
        <CheckBox x:Name="chkAllowSingleStroke" Content="允许单指" HorizontalAlignment="Left" Margin="198,10,0,0" VerticalAlignment="Top" Height="18" Grid.Row="1"/>
    </Grid>
</controls:Flyout>
